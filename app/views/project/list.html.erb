<section>
	<h3>My Projects</h3>

	<div class="row">
	<br/>
	<% if @projects.count > 0 %>
		<% @projects.each do |project| %>
				<%= link_to project do %>
					<div class="col s12 m6 l4">
						<div class="card">
							<div class="card-image waves-effect waves-block waves-light">
								<%= image_tag project.image(:thumb) %>
							</div>
							<div class="card-content" style="heigh: 6em">
								<div class="card-content grey-text text-darken-4">
									<%= project.shortname %>
								</div>
							</div>
						</div>
					</div>
				<% end %>
		<% end %>
	<% else %>
		<div class="center">
			<h5>You're not enrolled in any project yet!</h5>
			<%= link_to "Show me all projects", project_index_path, class: "btn btn-primary" %>
		</div>
	<% end %>

	</div>
</section>
