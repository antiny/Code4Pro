<div class="row">
	<div class="col m4">
		<div class="card z-depth-2">
			<div class="card-content">
				<div class="collection">
					<% @tasks.each do |task| %>
						<% if task.header? %>
							<div class="collection-item active">
								<i class="mdi-social-school"></i>
								<%= task.title %>
							</div>
						<% else %>
							<div class="collection-item">
								<%= link_to [task.project, task] do %>
									<%= task.title %>
								<% end %>
							</div>	
						<% end %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
	<div class="col m8">
		<div class="card z-depth-2">
			<div class="wistia_responsive_padding" style="padding:60.25% 0 0 0;position:relative;">
  			<div class="wistia_responsive_wrapper" style="height:100%;left:0;position:absolute;top:0;width:100%;">
  				<div class="wistia_embed wistia_async_<%= @task.video %> videoFoam=true" style="height:100%;width:100%">&nbsp;</div>
				</div>
			</div>
			
			<div class="row">
				<div class="col m6">
					<% if @prev_task.present? %>
        		<%= link_to "Previous", [@task.project, @prev_task], class: "btn btn-primary" if @prev_task.present? %>
        	<% else %>
        		&nbsp;
        	<% end %>
        </div>
        <div class="col m6">
	        <span class="right">
	      		<%= link_to "Next", [@task.project, @next_task], class: "btn btn-primary" if @next_task.present? %>
	      	</span>
      	</div>
      </div>

			<div class="card-action grey-text text-darken-4">
				<h5><%= @task.title %></h5>
				<hr>

				<%= markdown(@task.note) %>
			</div>
		</div>
	</div>
</div>


