<div class="row">
	<div class="col m4">
		<div class="card z-depth-2">
			<div class="card-content">
				<div class="collection">
					<% @tasks.each do |task| %>
						<% if task.header? %>
							<div class="collection-item active">
								<i class="mdi-social-school"></i>
								<%= task.title %>
							</div>
						<% else %>
							<div class="collection-item">
								<%= link_to [task.project, task] do %>
									<%= task.title %>
								<% end %>
							</div>	
						<% end %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
	<div class="col m8">
		<div class="card z-depth-2">
			<div class="card-content">
				<%= @task.video %>
			</div>
			<div class="card-action grey-text text-darken-4">
				<h5><%= @task.title %></h5>
				<hr>

				<%= markdown(@task.note) %>
			</div>
		</div>
	</div>
</div>