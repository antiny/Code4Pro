<div class="row">
  <div class="col m6 offset-m3 center">
    <h2>Log in</h2>

    <div class="section">
      <%= link_to user_omniauth_authorize_path(:google_oauth2), class: "btn red darken-1 btn-social" do %>
        <i class="mdi mdi-google"></i>
        Log in with Google
      <% end %>
      <br/><br/>
      <%= link_to user_omniauth_authorize_path(:facebook), class: "btn blue darken-4 btn-social" do %>
        <i class="mdi mdi-facebook"></i>
        Log in with Facebook
      <% end %>
      <br/><br/> 
      <%= link_to user_omniauth_authorize_path(:github), class: "btn grey darken-2 btn-social" do %>
        <i class="mdi mdi-github-circle"></i>
        Log in with Github
      <% end %>
    </div>  

    <div class="row or-divider">
      <span>or with email and password</span>
    </div>

    <div class="section">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, class: "validate", placeholder: "Email" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off", class: "validate", placeholder: "Password" %>
        </div>

        <button class="btn waves-effect waves-light" type="submit" name="action">Login</button>
        <%= link_to "Forgot Password", new_user_password_path, class: "waves-effect waves-light" %>
      <% end %>
    </div>
  </div>
</div>
